---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="service-card group" data-gsap="fade-up">
  <div class="relative transform-gpu transition-all duration-500 hover:z-10">
    <div class="bg-white rounded-xl shadow-lg p-8 transform transition-all duration-500 group-hover:scale-105 group-hover:shadow-2xl">
      <div class="text-corporate-blue mb-6 transform group-hover:scale-110 transition-transform duration-300">
        <div class="icon-wrapper relative">
          <div class="icon-background absolute inset-0 bg-corporate-yellow/10 rounded-full scale-0 group-hover:scale-100 transition-transform duration-500"></div>
          <Fragment set:html={icon} />
        </div>
      </div>
      <h3 class="text-2xl font-semibold mb-4 text-corporate-blue group-hover:text-corporate-yellow transition-colors duration-300">{title}</h3>
      <p class="text-gray-600 transition-all duration-300 group-hover:text-gray-800">{description}</p>
      <div class="mt-6 transform opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300">
        <a href="/servicios" class="inline-flex items-center text-corporate-blue hover:text-corporate-yellow transition-colors">
          <span>Descubre m√°s</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .icon-wrapper {
    position: relative;
    display: inline-block;
  }

  .icon-background {
    transform-origin: center;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
</style>