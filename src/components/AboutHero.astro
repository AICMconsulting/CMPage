---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="relative bg-corporate-blue text-white py-20">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-r from-corporate-blue/95 to-corporate-blue/90"></div>
    <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
  </div>
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-5xl font-bold mb-6">{title}</h1>
      <p class="text-xl text-gray-200">{subtitle}</p>
    </div>
  </div>
</div>