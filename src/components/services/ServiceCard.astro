---
interface Props {
  id: string;
  title: string;
  description: string;
  icon: string;
  features: string[];
}

const { id, title, description, icon, features } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:scale-105 transition-all duration-300">
  <div class="p-8">
    <div class="text-corporate-blue mb-6" set:html={icon} />
    <h3 class="text-2xl font-bold text-corporate-blue mb-4">{title}</h3>
    <p class="text-gray-600 mb-6">{description}</p>
    <ul class="space-y-3">
      {features.slice(0, 4).map((feature) => (
        <li class="flex items-center text-gray-700">
          <svg class="w-5 h-5 text-corporate-yellow mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          {feature}
        </li>
      ))}
    </ul>
  </div>
  <div class="bg-gray-50 p-6">
    <a href={`/servicios#${id}`} class="block text-center bg-corporate-blue text-white py-3 px-6 rounded-lg hover:bg-corporate-blue/90 transition-colors">
      Más información
    </a>
  </div>
</div>