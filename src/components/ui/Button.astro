---
interface Props {
  type?: "button" | "submit";
  variant?: "primary" | "secondary";
  class?: string;
}

const { 
  type = "button", 
  variant = "primary",
  class: className = "" 
} = Astro.props;

const baseStyles = "py-3 px-6 rounded-lg transition-colors font-semibold";
const variantStyles = {
  primary: "bg-corporate-blue text-white hover:bg-corporate-blue/90",
  secondary: "bg-corporate-yellow text-corporate-blue hover:bg-corporate-yellow/90"
};
---

<button 
  type={type}
  class:list={[baseStyles, variantStyles[variant], className]}
>
  <slot />
</button>