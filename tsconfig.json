{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "react",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": true
  }
}